<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wujiangbo.mapper.system.EasyOperLogMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.wujiangbo.domain.system.EasyOperLog">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="business_type" property="businessType"/>
        <result column="method" property="method"/>
        <result column="request_method" property="requestMethod"/>
        <result column="operator_type" property="operatorType"/>
        <result column="oper_user_id" property="operUserId"/>
        <result column="oper_url" property="operUrl"/>
        <result column="oper_ip" property="operIp"/>
        <result column="oper_location" property="operLocation"/>
        <result column="oper_param" property="operParam"/>
        <result column="json_result" property="jsonResult"/>
        <result column="status" property="status"/>
        <result column="error_msg" property="errorMsg"/>
        <result column="oper_time" property="operTime"/>
        <result column="take_time" property="takeTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, title, business_type, method, request_method, operator_type, oper_user_id, dept_name, oper_url, oper_ip, oper_location, oper_param, json_result, status, error_msg, oper_time, take_time
    </sql>

    <select id="selectMyPage" resultType="cn.wujiangbo.domain.system.EasyOperLog">
        select
        t1.*,
        t2.nick_name as createUserName
        from easy_oper_log t1
        left join easy_user t2 on t1.oper_user_id = t2.id
        <where>
            <if test="param.keyword != null and param.keyword != '' ">
                and t1.title like concat('%', #{param.keyword}, '%')
            </if>
            <if test="param.beginTime != null and param.beginTime != '' ">
                and t1.oper_time &gt;= #{param.beginTime}
            </if>
            <if test="param.endTime != null and param.endTime != '' ">
                and t1.oper_time &lt;= #{param.endTime}
            </if>
        </where>
        order by t1.oper_time desc
    </select>
</mapper>