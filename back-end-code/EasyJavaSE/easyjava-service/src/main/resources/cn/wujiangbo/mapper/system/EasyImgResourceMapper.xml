<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wujiangbo.mapper.system.EasyImgResourceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.wujiangbo.domain.system.EasyImgResource">
        <id column="id" property="id"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user_id" property="updateUserId"/>
        <result column="update_time" property="updateTime"/>
        <result column="bak1" property="bak1"/>
        <result column="bak2" property="bak2"/>
        <result column="bak3" property="bak3"/>
        <result column="busi_no" property="busiNo"/>
        <result column="func_flag" property="funcFlag"/>
        <result column="res_type" property="resType"/>
        <result column="res_name" property="resName"/>
        <result column="res_path" property="resPath"/>
        <result column="res_size" property="resSize"/>
        <result column="res_suffix" property="resSuffix"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_user_id, create_time, update_user_id, update_time, bak1, bak2, bak3, busi_no, func_flag, res_type, res_name, res_path, res_size, res_suffix
    </sql>

    <select id="selectMyPage" resultType="cn.wujiangbo.domain.system.EasyImgResource">
        select
        t1.*,
        t2.nick_name as createUserName,
        t3.nick_name as updateUserName
        from easy_img_resource t1
        left join easy_user t2 on t1.create_user_id = t2.id
        left join easy_user t3 on t1.update_user_id = t3.id
        <where>
            <if test="param.beginTime != null and param.beginTime != '' ">
                and t1.update_time &gt;= #{param.beginTime}
            </if>
            <if test="param.endTime != null and param.endTime != '' ">
                and t1.update_time &lt;= #{param.endTime}
            </if>
        </where>
        order by t1.update_time desc
    </select>

    <select id="selectById" resultType="cn.wujiangbo.domain.system.EasyImgResource">
        select
        t1.*
        from easy_img_resource t1
        left join ${tableName} t2 on t1.busi_no = t2.busi_no
        where t2.id = #{id}
    </select>
</mapper>