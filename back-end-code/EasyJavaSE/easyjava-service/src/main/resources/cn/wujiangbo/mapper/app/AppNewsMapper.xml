<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wujiangbo.mapper.app.AppNewsMapper">

    <sql id="baseSql">
        select t1.*
        from app_news t1
        <where>
            <if test="query.keyword != null and query.keyword != '' ">
                and t1.new_title like concat('%', #{query.keyword}, '%')
            </if>
            <if test="query.beginTime != null and query.beginTime != '' ">
                <![CDATA[ and t1.create_time >= #{query.beginTime} ]]>
            </if>
            <if test="query.endTime != null and query.endTime != '' ">
                <![CDATA[ and t1.create_time <= #{query.endTime} ]]>
            </if>
        </where>
        order by t1.create_time desc
    </sql>

    <!--导出查询分页数据表格-->
    <select id="selectMySqlPage" resultType="cn.wujiangbo.domain.app.AppNews">
        <include refid="baseSql"></include>
    </select>

    <!--导出Excel表格-->
    <select id="selectExportExcelData" resultType="cn.wujiangbo.domain.app.AppNews">
        select t1.*
        from app_news t1
        <if test="list != null and list.size() > 0">
            WHERE t1.id in
            <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        order by t1.id desc
    </select>
</mapper>